@model _2280600149_HoangAn3.Models.Category

<div class="container mt-4">
    <h2>Delete Category</h2>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-danger">Are you sure you want to delete this category?</h5>
            <dl class="row mt-4">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Model.Name</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mt-3">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
